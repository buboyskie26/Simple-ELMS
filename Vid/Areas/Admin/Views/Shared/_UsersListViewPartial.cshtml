@model Vid.Areas.Admin.ModelsSamp.UsersModelSampList;

@using Vid.Areas.Admin.Comparer; 

<table class="table table-hover">
    <thead>
        <tr class="text-center">
            <th></th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null)
        {
            @foreach (var item in Model.Users)
            {
                <tr class="text-center">
                    <td>
                        @if(Model.UsersSelected!=null && Model.UsersSelected.Contains(item, new CompareUsers()))
                    {
                        <input checked type="checkbox" class="form-check-input"
                               id="UsersSelected"name="UsersSelected" value="@item.UserId" />
                    }
                    else
                    {
                    <input type="checkbox" class="form-check-input"
                           id="usersSelected" name="usersSelected" value="@item.UserId" />
                    }
                    </td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                </tr>

            }

        }
    </tbody>

</table>

@section Scripts {
    <script src="~/js/prac/UserToCategorySamp.js"></script>
    <script src="~/js/BootstrapAlerts.js"></script>

} 