@model CategoryDetailsModel;
@{
    ViewData["Title"] = "Home Page";
}


@if (Model.GroupedCategoryItemsByCategoryModels != null)
{
    <div class="row">
        <div class="col-md-6">
            <h2>Your Courses</h2>
        </div>
        <div class="col-md-6 text-right">
           <a class="btn btn-outline-primary" asp-action="Index" asp-controller="CategoriesToUser">
               Choose your Courses
           </a>
        </div>
    </div>

    if (Model.GroupedCategoryItemsByCategoryModels.Count() > 0)
    {
        @foreach (var item in Model.GroupedCategoryItemsByCategoryModels)
        {
            <div class="card mt-2">
                <h4 class="card-header text-secondary bg-white" style="cursor:pointer" 
                    data-toggle="collapse" data-target="#collapse_@item.Id" aria-expanded="false"
                    aria-controls="collapse_@item.Id">

                    @item.Title
                </h4>
                <div id="collapse_@item.Id" class="collapse" aria-expanded="false" aria-controls="collapse_@item.Id">
                    <hr />
                    @foreach (var m in item.Items)
                    {
                        <div class="mt-2">

                            <img src="@m.MediaImagePath" width="100" height="100" class="img-thumbnail float-left mr-2" />
                            <h5 class="card-title mt-2">
                                <a class="text-dark" asp-controller="Content" asp-action="Index"
                                   asp-route-categoryItemId="@m.CategoryItemId">@m.CategoryItemTitle</a>
                            </h5>
                            <p class="card-text text-dark mt-2">
                                @m.CategoryItemDescription
                            </p>

                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <h4 class="mt-2 text-warning">You are currently not matched with any courses</h4>
        // hello world
    }
}
else
{

   <partial name="_DefaultHomePageContentPartial" model="Model.Categories" />
}


