@model Vid.ModelsTwo.CategModelWrapper;
@using Vid.Models;
@{
    ViewData["Title"] = "Home Page";
}


@if (Model.groupCategItemsDetail != null)
{
    <div class="row">
        <div class="col-md-6">
            <h2>Your Courses</h2>
        </div>
        <div class="col-md-6 text-right">
            <a asp-controller="CategoriesToUser" asp-action="Index" class="btn btn-outline-dark">Choose Courses</a>
        </div>
    </div>

    if (Model.groupCategItemsDetail.Count() > 0)
    {
        @foreach (var item in Model.groupCategItemsDetail)
        {
            <div class="card mt-2">
                <h4 class="card-header text-secondary bg-white" style="cursor:pointer"
                    data-toggle="collapse" data-target="#collapse_@item.Id" aria-expanded="false"
                    aria-controls="collapse_@item.Id">

                    @item.Title
                </h4>
                <div id="collapse_@item.Id" class="collapse" aria-expanded="false" aria-controls="collapse_@item.Id">
                    <hr />
                    @foreach (var m in item.GroupCategItems)
                    {
                        <div class="mt-2">

                            <img src="@m.VideoImage" width="100" height="100" class="img-thumbnail float-left mr-2" />
                            <h5 class="card-title mt-2">
                                <a class="text-dark" asp-controller="Content" asp-action="Index" asp-route-CategoryItemId="@m.CategoryItemsId">@m.CategoryItemsTitle</a>
                            </h5>
                            <p class="card-text text-dark mt-2">
                                @m.CategoryItemsDescription
                            </p>

                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <h4 class="mt-2 text-warning">You are currently not matched with any courses</h4>

    }
}
else
{

    <h4 class="mt-2 text-warning">You are currently not matched with any courses</h4>
}


