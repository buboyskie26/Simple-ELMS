@model Vid.Entities.Content
@{
    ViewData["Title"] = "Index";
}

@if (Model.HTMLContent != null)
{
    <div class=" row">
        <div id="TextContent" class="mt-3 col-md-10">
            @Model.HTMLContent
        </div>
    </div>
}
@if (Model.VideoLink != null)
{ 
    <div class="row">
        <div>
            <iframe width="550" height="350" 
                    src="@Model.VideoLink" allowfullscreen="" frameborder="0">
                 
            </iframe>
        </div>
    </div>
}
